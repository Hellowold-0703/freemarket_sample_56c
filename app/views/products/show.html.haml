= render 'top/header'
%section.product
  %h1.product__name 
    = @product.name
  .product__content.clearfix
    .product__photo
      .owl-carousel.owl-loaded.owl-drag
        .owl-stage-outer
          .owl-stage
            - @product.images.each do |image|
              - if image.url.present?
                .owl-product.active
                  .owl-product-inner
                    = image_tag image.url,{class: 'owl-lazy'}

        .owl-nav.disabled
          .owl-prev prev
          .owl-next next
        .owl-items.owl-thumbs
          - @product.images.each do |image|
            - if image.url.present?
              .owl-item.active
                .owl-item-inner
                  = image_tag image.url, {class: 'is-higher-width'}
    %table.product__detail
      %tbody
        %tr
          %th 出品者
          %td 
            = link_to 'シン'
            .ratings
              .user-ratings
                %i.fa.fa-smile-o
                %span 1200
              .user-ratings
                %i.fa.fa-meh-o
                %span 300
              .user-ratings
                %i.fa.fa-frown-o
                %span 10
        %tr
          %th カテゴリー
          %td 
            = link_to 'メンズ'
            = link_to do
              .product-sub-category
                %i.fa.fa-angle-right
                靴
            = link_to do
              .product-sub-category
                %i.fa.fa-angle-right
                スニーカー
        %tr
          %th ブランド
          %td 
            = link_to do
              ナイキ
        %tr
          %th 商品のサイズ
          %td 26㎝
        %tr
          %th 商品の状態
          %td 
            = @product.status
        %tr
          %th 配送料の負担
          %td 
            = @product.shipping_charge
        %tr
          %th 配送の方法
          %td 
            = @product.shipping_method
        %tr
          %th 配送元地域
          %td
            = link_to do
              = @product.shipping_area
        %tr
          %th 発送日の目安
          %td 
            = @product.days_before_shipment

  .product-price
    %span.product-price__total ¥18,700
    %span.product-price__tax (税込)
    %span.product-price__sipping-fee 送料込み
  = link_to '購入画面に進む', root_path, {class: 'product-buy-btn'}
  .product-description
    %p.product-description__content<
      = @product.explanation

  .product-button.clearfix
    .product-button__left
      %button.product-button__left__like
        %i.fa.fa-heart-o
        %span いいね！
        %span.fade-in-down 7
      = link_to '', {class: 'product-button__left__like product-button__left__report'} do
        %i.fa.fa-flag-o
        %span 不適切な商品の報告
    .product-button__right
      = link_to do
        %i.fa.fa-lock
        %span あんしん・あんぜんへの取り組み
.product-message
  .product-message__container
    .product-message__content
      %form.message-form
        %p 相手のことを考え丁寧なコメントを心がけましょう。不快な言葉遣いなどは利用制限や退会処分となることがあります。
        %textarea.textarea-default
        %button.message-submit-btn
          %span コメントする
%ul.product-link
