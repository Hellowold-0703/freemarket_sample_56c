.address-img
  = render 'devise/sessions/sign-up-header'
.progress-address
  =image_tag "progress3.png", height: "100px", width: "480px;"
.address-header 住所入力
=form_for @user, url: credit_new_register_index_path,method: :get do |f|
  .address-name
    %h1 必須
    %br　お名前(全角)
    =f.text_field:address_last_name,{placeholder: "例)山田", class: "input-address-name"}
    =f.text_field:address_first_name,{placeholder: "例)彩", class: "input-address-name"}
  .address-kana
    %h1 必須
    %br　お名前カナ(全角)
    =f.text_field:address_last_name_kana,{placeholder: "例)ヤマダ", class: "input-address-name"}
    =f.text_field:address_first_name_kana,{placeholder: "例)アヤ", class: "input-address-name"}
  .address-input
    %h1 必須
    %br 郵便番号
    =f.text_field:address_number,{placeholder: "例)123-4567", class: "input-members"}
    %h2 必須
    %br 都道府県
    =f.text_field:address_prefecture,{placeholder: "北海道", class: "input-members"}
    %h3 必須
    %br 市区町村
    =f.text_field:address_name,{placeholder: "例)横浜市緑区", class: "input-members"}
    %h4 必須
    %br 番地
    =f.text_field:address_block,{placeholder: "例)青山1-1-1", class: "input-members"}
    %h5 任意
    %br 建物名
    =f.text_field:address_building,{placeholder: "例)柳ビル103", class: "input-members"}
    %h6 任意
    %br 電話
    =f.text_field:address_phone_number,{placeholder: "例)09012345678", class: "input-members"}
    %button.register-button{type:"subumit"}次へ進む
= render 'devise/sessions/sign-up-footer'